<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/nombreMecdicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mirtazapina"/>
    <TextView
        android:id="@+id/fechaMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12/10/22"/>
    <TextView
        android:id="@+id/numeroTomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreMecdicamento"
        android:layout_marginTop="16dp"
        tools:text="Son 2 tomas al dia cada 12 horas"/>
    <TextView
        android:id="@+id/dosisPorToma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fechaMedicamento"
        android:layout_marginTop="16dp"
        tools:text="150mlg"/>
    <TextView
        android:id="@+id/observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/dosisPorToma"
        android:text="Observaciones :"/>
    <TextView
        android:id="@+id/descripcionObservaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/observaciones"
        tools:text="Por la maÃ±ana tomar despues del desayuno, por la noche tomar 15 minutos antes de la cena"/>
</androidx.constraintlayout.widget.ConstraintLayout>
