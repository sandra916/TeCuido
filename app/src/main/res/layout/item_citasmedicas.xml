<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_text"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/fotocitasMedicas"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/citas_medicas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreCentroSalud"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/fotocitasMedicas"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hospital Severo Ochoa" />

    <TextView
        android:id="@+id/nombreEspecialista"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/fotocitasMedicas"
        app:layout_constraintTop_toBottomOf="@id/nombreCentroSalud"
        tools:text="Ramiro Velazquez"/>

    <TextView
        android:id="@+id/localizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/fotocitasMedicas"
        app:layout_constraintTop_toBottomOf="@id/nombreEspecialista"
        tools:text="Rio Ebro sin numero "/>
    <TextView
        android:id="@+id/acompañante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/fotocitasMedicas"
        app:layout_constraintTop_toBottomOf="@id/localizacion"
        tools:text="Jose Antonio Bermudez"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/fotocitasMedicas"
        app:layout_constraintTop_toBottomOf="@id/acompañante"
        tools:text="Dia de la Cita"/>
</androidx.constraintlayout.widget.ConstraintLayout>