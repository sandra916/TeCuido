<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        app:srcCompat="@drawable/ic_logo1"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="72dp"
        android:text="ยก Te damos la bienvenida a TeCuido !"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewRegistro"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="277dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="407dp"
        android:text="Registrarse" />

</LinearLayout>